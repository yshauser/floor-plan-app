#root {
  max-width: 1280px;
  margin: 0 auto;
  padding: 2rem;
  text-align: center;
}

.logo {
  height: 6em;
  padding: 1.5em;
  will-change: filter;
  transition: filter 300ms;
}

.logo:hover {
  filter: drop-shadow(0 0 2em #646cffaa);
}

.logo.react:hover {
  filter: drop-shadow(0 0 2em #61dafbaa);
}

@keyframes logo-spin {
  from {
      transform: rotate(0deg);
  }
  to {
      transform: rotate(360deg);
  }
}

@media (prefers-reduced-motion: no-preference) {
  a:nth-of-type(2) .logo {
      animation: logo-spin infinite 20s linear;
  }
}

.card {
  padding: 2em;
}

.read-the-docs {
  color: #888;
}

/* New styles for better layout */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.header, .footer {
  width: 100%;
  background-color: blueviolet;
  border-radius: 10px;
  /* padding: 1rem; */
}

.main-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
}

.search-bar, .pdf-viewer, .room-highlighter {
  width: 100%;
  max-width: 800px;
  margin-bottom: 1rem;
  /* background-color: violet; */

}
.input-text{
  color: black;
  background-color: #ffffff;
}


/* Flexbox for PDFViewer buttons */
.pdf-viewer-buttons {
   display: flex;
   justify-content: center;
   gap: 1rem;
  }
  
  /* Custom styles for PDFViewer sidebar */
.pdf-viewer-sidebar {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f9f9f9;
  border-right: 1px solid #ccc;
  padding: 10px;
  width: 200px;
}

.pdf-viewer-sidebar button {
  margin: 10px 0;
  padding: 10px;
  width: 100%;
  background-color: #e0e0e0;
  border: none;
  cursor: pointer;
}

.pdf-viewer-sidebar button:hover {
  background-color: #d0d0d0;
}

.pdf-viewer-container {
  display: flex;
}

.pdf-viewer-content {
  flex-grow: 1;
  padding: 10px;
}

/* Custom styles for PDFViewer toolbar and sidebar */
.rpv-default-layout__toolbar {
  background-color: #f0f0f0; /* Change the background color */
  border-bottom: 1px solid #ccc; /* Add a border */
  padding: 10px; /* Add padding */
}

.rpv-default-layout__toolbar-button {
  color: #333; /* Change the button text color */
  margin: 0 5px; /* Add margin between buttons */
}

.rpv-default-layout__sidebar {
  background-color: #f9f9f9; /* Change the background color */
  border-right: 1px solid #ccc; /* Add a border */
  padding: 10px; /* Add padding */
}

.rpv-default-layout__sidebar-item {
  color: #333; /* Change the item text color */
  margin-bottom: 10px; /* Add margin between items */
}
